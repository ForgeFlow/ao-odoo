<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_bom_structure" model="ir.actions.act_window">
            <field name="name">Bill of Materials Structure</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.bom.line</field>
            <field name="domain">[('bom_id', 'in', active_ids)]</field>
            <field name="view_type">tree</field>
            <field name="view_id" ref="mrp.mrp_bom_line_tree_view"/>
            <field name="view_type">tree</field>
        </record>
        <record id="mrp.ir_BOM_structure" model="ir.values">
            <field eval="'client_action_multi'" name="key2"/>
            <field eval="'mrp.bom'" name="model"/>
            <field name="name">Bill of Materials Structure</field>
            <field eval="'ir.actions.act_window,'+str(action_bom_structure)" name="value"/>
        </record>

        <record id="view_move_form" model="ir.ui.view">
            <field name="name">stock.move.form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">
                <group name="origin_grp" position="inside">
                    <field name="production_id"/>
                </group>
            </field>
        </record>

        <record id="base.menu_mrp_root" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('ao_mrp.ao_group_mrp_readonly'))]"/>
        </record>

        <record id="mrp_bom_component_tree_view" model="ir.ui.view">
            <field name="name">mrp.bom.component.tree - ao_mrp</field>
            <field name="model">mrp.bom.line</field>
            <field name="inherit_id" ref="mrp.mrp_bom_component_tree_view"/>
            <field name="arch" type="xml">
                <field name="bom_id" position="before">
                    <field name="bom_id_product_code"/>
                </field>
            </field>
        </record>

        <record id="mrp_production_form_view" model="ir.ui.view">
            <field name="name">mrp.production.form - ao_mrp</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="assigned_to"/>
                </field>
            </field>
        </record>

        <record id="mrp_production_tree_view" model="ir.ui.view">
            <field name="name">mrp.production.tree - ao_mrp</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
            <field name="arch" type="xml">
                <field name="state" position="before">
                    <field name="assigned_to"/>
                </field>
            </field>
        </record>

        <record id="view_mrp_production_filter" model="ir.ui.view">
            <field name="name">mrp.production.select - ao_mrp</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
            <field name="arch" type="xml">
                <field name="product_tmpl_id" position="before">
                    <separator/>
                    <filter string="Assigned to me" domain="[('assigned_to','=', uid), ('state', 'not in', ('done', 'cancel'))]"
                        help="Production orders not done and assigned to me"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
